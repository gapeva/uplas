# Uplas Backend Environment Configuration
# Copy this file to .env and fill in the values.

# ===========================================
# Django Core Settings
# ===========================================
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# ===========================================
# Database Settings
# ===========================================
# Use 'sqlite' for local dev, 'postgresql' for production
DB_ENGINE=postgresql

# PostgreSQL settings (only needed if DB_ENGINE=postgresql)
POSTGRES_DB=uplas_db
POSTGRES_USER=uplas_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_HOST=127.0.0.1
POSTGRES_PORT=5432

# ===========================================
# AI Services - Gemini API (Required for AI features)
GEMINI_API_KEY=your_gemini_api_key_here

# ===========================================
# CORS Settings
# ===========================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173

# ===========================================
# Payment Services - Paystack
# ===========================================
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key

# ===========================================
# Email Configuration (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password

# ===========================================
# Application URLs
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:8000

# ===========================================
# Security (for production)
CSRF_TRUSTED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# ===========================================
# Docker/Production Settings
# ===========================================
GUNICORN_WORKERS=3
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=120

# Optional: Create superuser on first run
DJANGO_SUPERUSER_EMAIL=admin@uplas.me
DJANGO_SUPERUSER_PASSWORD=changeme123
DJANGO_SUPERUSER_FULL_NAME=Admin User
